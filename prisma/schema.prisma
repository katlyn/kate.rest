generator client {
  provider = "prisma-client"
  output   = "./generated/"
  runtime  = "deno"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Review {
  id      String  @id @default(nanoid())
  rating  Int
  message String
  author  String
  url     String?

  created DateTime @default(now())
}
